<resources xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppBaseTheme" parent="@style/Theme.AppCompat.Light">
    </style>
    <style name="AppTheme" parent="AppBaseTheme">
    </style>

    <style name="IphoneDialog" parent="@style/DialogWithOutAnimation">
        <item name="android:windowAnimationStyle">@style/AnimationDialogIphone</item>
    </style>

    <style name="DialogWithOutAnimation" parent="@android:style/Theme.Dialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@color/color_trans</item>
        <item name="android:windowBackground">@color/color_trans</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowSoftInputMode">adjustResize|stateUnspecified</item>
        <!-- stateUnspecified|adjustResize -->
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:windowCloseOnTouchOutside" tools:ignore="NewApi">true</item>
    </style>

    <style name="AnimationDialogIphone">
        <item name="android:windowEnterAnimation">@anim/bottom_to_current</item>
        <item name="android:windowExitAnimation">@anim/current_to_bottom</item>
    </style>
    
    <style name="AnimationToolbar">
		<item name="@android:windowEnterAnimation">@anim/toolbar_enter</item>
		<item name="@android:windowExitAnimation">@anim/toobar_exit</item>
	</style>
    
</resources>